button {
    margin: 0;
}

.impression-container {
    margin-top: 20rpx;
    padding: 40rpx 40rpx 30rpx 40rpx;
    background-color: #f7f7f9;
    border-radius: 20rpx;
    background-image: url("https://www.annybay.com/static/task-detail/bg_yx@2x.png");
    background-repeat: no-repeat;
    background-position: 329rpx 96rpx;
    background-size: 303rpx 122rpx;
}

.impression-title {
    display: flex;
    justify-content: space-between;
    margin-bottom: 30rpx;
    font-size: 36rpx;
    font-weight: bold;
}

.impression-title button {
    width: 120rpx;
    height: 50rpx;
    padding: 0;
    line-height: 50rpx;
    border-radius: 10rpx;
    font-size: 24rpx;
    background-color: #fff;
    box-shadow: 0px 0px 10px 0px rgba(153,153,153,0.2);
    color: rgba(255,103,94,1);
}

.impression-box {
    display: flex;
    flex-wrap: wrap;
}

.add-impression-btn {
    width: 124rpx;
    height: 50rpx;
    margin-bottom: 8rpx;
    background-color: #ff675e;
    border-radius: 10rpx;
    color: #fff;
    font-size: 24rpx;
    font-weight: 500;
    box-shadow: 0px 0px 20px 0px rgba(255,103,94,0.2);
}

.impression-label {
    margin: 20rpx 0;
    font-size: 28rpx;
    color: #666;
}

.impression-none>image {
    width: 22rpx;
    height: 32rpx;
    margin-right: 10rpx;
    display: inline-block;
}

.impression-none>text {
    font-size: 24rpx;
    color: #999;
    height: 32rpx;
    display: inline-block;
    overflow: hidden;
}

.tag {
    display: inline-block;
    height: 50rpx;
    padding: 0 30rpx;
    margin-right: 10rpx;
    margin-bottom: 8rpx;
    font-size: 24rpx;
    color: #fff;
    line-height: 50rpx;
    background-color: #333;
    border-radius: 25rpx;
}