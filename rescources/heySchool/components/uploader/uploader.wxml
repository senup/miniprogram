<view class="weui-uploader">
    <view class="weui-uploader__bd">
        <view class="weui-uploader__files">
            <view bindtap="previewImage" class="weui-uploader__file" data-index="{{index}}" wx:for="{{currentFiles}}" wx:key="*this">
                <image class="weui-uploader__img" mode="aspectFill" src="{{item}}"></image>
            </view>
        </view>
        <view class="weui-uploader__input-box" wx:if="{{currentFiles.length<maxCount}}">
            <view bindtap="chooseImage" class="weui-uploader__input"></view>
        </view>
    </view>
    <view class="weui-uploader__ft">
        <div class="weui-uploader__overview">
            <view class="weui-uploader__info" wx:if="{{maxCount>1}}">{{currentFiles.length}}/{{maxCount}}</view>
        </div>
    </view>
</view>
<mp-gallery bind:hide="hidePreview" binddelete="deletePic" current="{{previewCurrent}}" hideOnClick="{{true}}" imgUrls="{{previewImageUrls}}" show="{{showPreview}}" showDelete="true"></mp-gallery>
