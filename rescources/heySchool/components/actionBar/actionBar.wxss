@import "../../templates/public/public.wxss";

.comment-box-placeholder {
    height: 90rpx;
    background-color: rgba(0,0,0,0);
}

.positioning-footer {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    box-shadow: 0px -4px 24px 0px rgba(230,230,230,1);
    box-sizing: border-box;
    z-index: 200;
    background-color: #fff;
}

.action-bar {
    display: flex;
    justify-content: space-between;
    padding: 20rpx;
}

.btn-icon {
    height: 50rpx;
    padding: 0;
    line-height: 50rpx;
}

.btn-icon .iconfont {
    font-size: 40rpx;
    color: #ccc;
}

.icon-good.active {
    color: #f85864!important;
}

.input-placeholder {
    height: 50rpx;
    line-height: 50rpx;
    padding: 0 20rpx;
    background-color: rgba(242,242,242,1);
    font-size: 24rpx;
    box-sizing: border-box;
    border-radius: 25rpx;
}

.transparent-shade {
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    z-index: 100;
}

.comment-box {
    padding: 20rpx 40rpx;
    background-color: #fff;
}

.comment-box-main {
    width: 100%;
    min-height: 50rpx;
    font-size: 24rpx;
    background: rgba(242,242,242,1);
    border-radius: 25rpx;
    line-height: 40rpx;
}

.comment-box textarea {
    width: 630rpx;
    padding: 0 20rpx;
    line-height: 40rpx;
}

.comment-box .image-box {
    position: relative;
    width: 200rpx;
    max-height: 300rpx;
    overflow: hidden;
    margin: 20rpx;
}

.comment-box .image-box image {
    width: 100%;
}

.comment-box .image-box .btn-close {
    position: absolute;
    top: 0;
    right: 0;
    width: 30rpx;
    height: 30rpx;
    padding: 0;
    color: #fff;
    font-size: 24rpx;
    line-height: 30rpx;
    text-align: center;
    border-radius: 0;
    background-color: rgba(0,0,0,0.5);
}

.comment-box-footer {
    width: 100%;
    height: 50rpx;
    margin-top: 20rpx;
}

.comment-box-footer-right {
    float: right;
    display: flex;
    align-items: center;
}

.btn-submit {
    margin-left: 40rpx;
    width: 100rpx;
    border-radius: 25rpx;
}

.footer-icon {
    margin-right: 20rpx;
}