.page_hd {
    display: flex;
    align-items: center;
    padding: 16rpx 40rpx;
    font-size: 24rpx;
    color: #f79a15;
    background-color: #fef6d4;
}

.icon {
    width: 28rpx;
    height: 28rpx;
    margin-right: 12rpx;
}

.page_bd {
    padding: 40rpx;
}

.main-h1 {
    margin: 10rpx 0 20rpx 0;
    font-size: 40rpx;
    font-weight: 500;
}

.main-h2 {
    margin: 20rpx 0;
    font-size: 28rpx;
}

.main-h3 {
    font-size: 24rpx;
    color: #999;
}

.icon-warning {
    margin-right: 10rpx;
    font-size: 28rpx;
    color: #ccc;
}

.card-container {
    width: 670rpx;
    height: 300rpx;
    margin-top: 40rpx;
    padding: 66rpx 56rpx;
    background-image: url(https://www.annybay.com/static/my/bg_rz.png);
    background-size: 100%;
    background-repeat: no-repeat;
    box-sizing: border-box;
}

.card-container-title {
    display: flex;
    align-items: center;
    font-size: 48rpx;
    font-weight: 600;
    color: #000;
}

.btn-right {
    width: 44rpx;
    height: 44rpx;
    margin-left: 20rpx;
    background-color: #000;
    color: #fff;
    font-size: 24rpx;
    line-height: 44rpx;
    text-align: center;
    border-radius: 50%;
}

.card-container-label {
    margin-top: 16rpx;
    font-size: 28rpx;
    color: #000;
    opacity: 0.6;
}

.page_ft {
    position: fixed;
    bottom: 40rpx;
    left: 0;
    right: 0;
    color: #999;
    font-size: 24rpx;
    text-align: center;
    line-height: 36rpx;
}