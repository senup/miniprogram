page {
    background-color: #f2f2f2;
}

.navbar {
    display: flex;
    justify-content: space-between;
    margin-top: 2rpx;
    padding: 24rpx 48rpx 10rpx;
    background-color: #fff;
}

.navbar-item {
    position: relative;
    display: inline-block;
    padding-bottom: 18rpx;
    width: 100rpx;
    font-size: 30rpx;
    font-weight: 400;
    color: #999;
}

.navbar-item-active {
    font-weight: 500;
    color: #333;
}

.navbar-item-active:after {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 36rpx;
    height: 6rpx;
    background-color: #333;
    content: "";
}

.subnavbar {
    padding: 30rpx 40rpx 0 40rpx;
}

.subnavbar view {
    display: inline-block;
    width: 104rpx;
    height: 64rpx;
    margin-right: 32rpx;
    text-align: center;
    line-height: 64rpx;
    font-size: 28rpx;
    color: #999;
    background-color: #e6e6e6;
    border-radius: 16rpx;
}

.subnavbar view.active {
    background-color: #f8d300;
    color: #333;
}

.page_bd {
    margin-top: 30rpx;
}

.go-top {
    position: fixed;
    bottom: 130rpx;
    right: 30rpx;
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    background-color: rgba(204,204,204,0.8);
    text-align: center;
    line-height: 60rpx;
    color: #fff;
    font-size: 28rpx;
}

.no-list {
    margin-top: 100rpx;
    margin-bottom: 40rpx;
    font-size: 24rpx;
    color: #999;
    text-align: center;
}