page {
    background: #f2f2f2;
}

input {
    font-size: 28rpx;
}

.weui-navbar {
    background-color: #fff;
    display: flex;
    flex-wrap: wrap;
    font-size: 0;
    border-bottom: 1px solid #f2f2f2;
}

.weui-navbar__item {
    height: 90rpx;
    width: 50%;
    text-align: center;
    line-height: 90rpx;
    font-size: 32rpx;
    color: #666;
}

.weui-navbar__item_on {
    font-weight: 500;
    color: #000;
}

.weui-navbar__slider {
    height: 4rpx;
    width: 50%;
    background: rgba(255,208,52,1)!important;
    transition: transform 0.3s,-webkit-transform 0.3s;
}

.weui-cells__group {
    background-color: #fff;
    border-bottom: 16rpx solid #f2f2f2;
}

.input-placeholder {
    font-size: 28rpx;
    font-family: PingFangSC-Regular;
    color: rgba(204,204,204,1);
}

picker {
    display: inline-block;
}

.weui-textarea {
    width: 100%;
    height: 150rpx;
    padding: 20rpx;
    margin-top: 20rpx;
    background-color: #fafafa;
    color: #666;
    font-size: 28rpx;
    border-radius: 8rpx;
    box-sizing: border-box;
}

.msg-cell {
}

.msg-cell_footer {
    position: relative;
}

.msg-cell_footer input {
    margin-right: 30rpx;
}

.msg-cell_footer picker {
    position: absolute;
    top: 0;
    right: -10rpx;
}

.btn-group {
    margin: -10rpx 30rpx 20rpx 30rpx;
    text-align: right;
}

.btn-group>button:last-of-type {
    margin-right: 0;
}

.btn-group>button {
    display: inline-block;
    padding: 0 30rpx;
    margin-right: 20rpx;
    height: 56rpx;
    background-color: #fff;
    border: 1px solid #333;
    border-radius: 28rpx;
    font-size: 26rpx;
    line-height: 50rpx;
}

.btn-group>.btn-remove {
    background-color: #feeeee;
    color: #f86464;
    border: 1px solid #fca5a5;
}

.btn-group>.btn-add {
    background-color: #fefae9;
    color: #ffd034;
    border: 1px solid #ffd034;
}

.bounty-cell {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 16px;
    background-color: #fff;
    border-bottom: 16rpx solid #f2f2f2;
}

.bounty-cell_title {
    flex-grow: 1;
}

.bounty-cell_title-content {
    font-size: 32rpx;
}

.bounty-cell_title-tip {
    font-size: 24rpx;
    color: #999;
}

.bounty-cell_footer {
    display: flex;
    flex-grow: 0;
}

.bounty-cell_footer-input {
    width: 200rpx;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 48rpx;
    color: #ff525a;
    text-align: right;
}

.bounty-cell_footer-label {
    height: 40rpx;
    margin-left: 20rpx;
    margin-top: 10rpx;
}

.bounty-tip {
    height: 40rpx;
    padding: 0 16px;
    color: #999;
    font-size: 24rpx;
}

.icon-warning {
    color: #67dd55;
    font-size: 28rpx;
    margin-right: 10rpx;
}

.page_ft-placeholder {
    height: 88rpx;
}

.page_ft {
    position: fixed;
    bottom: 0;
    width: 100%;
    z-index: 100;
}

.btn-block {
    border-radius: 0;
}

.other-textarea {
    width: 100%;
    min-height: 200rpx;
    margin-top: 20rpx;
    font-size: 28rpx;
    color: #666;
}