.heartbeat-btn {
    position: relative;
    width: 116rpx;
    height: 50rpx;
    padding: 0;
    line-height: 50rpx;
    border-radius: 10rpx;
    font-size: 0;
    border: 1px solid #ff675e;
    box-sizing: border-box;
}

.heartbeat-btn>image {
    position: absolute;
    top: 12rpx;
    left: 16rpx;
    width: 28rpx;
    height: 24rpx;
    margin-right: 10rpx;
}

.heartbeat-btn>text {
    margin-left: 30rpx;
    font-size: 24rpx;
}

.heartbeat-btn-wxd {
    background-color: #fff;
    box-shadow: 0px 0px 10px 0px rgba(153,153,153,0.2);
}

.heartbeat-btn-wxd>text {
    color: rgba(255,103,94,1);
}

.heartbeat-btn-xd {
    background: rgba(255,255,255,1);
    box-shadow: 0px 0px 20px 0px rgba(255,103,94,0.2);
}

.heartbeat-btn-xd>text {
    color: rgba(255,103,94,1);
}

.heartbeat-btn-hxxd {
    background: rgba(255,103,94,1);
    box-shadow: 0px 0px 20px 0px rgba(255,103,94,0.2);
}

.heartbeat-btn-hxxd>text {
    color: #fff;
}

.window-background {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0,0,0,0.5);
    z-index: 999;
}

.window-main {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 750rpx;
    height: 560rpx;
    background-color: #fff;
    border-radius: 28rpx 28rpx 0 0;
}

.window-main::before {
    content: "";
    width: 72rpx;
    height: 10rpx;
    background: rgba(204,204,204,1);
    border-radius: 5rpx;
    position: absolute;
    top: 12rpx;
    left: 339rpx;
}

.window-close {
    width: 48rpx;
    height: 48rpx;
    line-height: 42rpx;
    border-radius: 50%;
    background-color: #ccc;
    position: absolute;
    top: 34rpx;
    right: 34rpx;
    padding: 0;
}

.window-close>.icon-close {
    color: #fff;
    font-size: 24rpx;
}

.window-heartbeat-btn {
    position: relative;
    display: block;
    width: 300rpx;
    height: 300rpx;
    border-radius: 50%;
    margin: 110rpx auto 50rpx auto;
    overflow: visible;
}

.window-heartbeat-btn image {
    position: absolute;
    top: 50%;
    left: 50%;
    margin-top: -60rpx;
    margin-left: -70rpx;
    width: 140rpx;
    height: 120rpx;
}

.heartbeat-btn-wxd {
    box-shadow: 0 0 30px 0 rgba(153,153,153,0.2);
}

.heartbeat-btn-xd {
    box-shadow: 0px 0px 20px 0px rgba(255,103,94,0.2);
}

.heartbeat-btn-hxxd {
    background: rgba(255,103,94,1);
    box-shadow: 0px 0px 20px 0px rgba(255,103,94,0.2);
}

.window-heartbeat-tip {
    position: absolute;
    top: -30rpx;
    right: -60rpx;
    z-index: 10;
    display: block;
    background-color: #36d466;
    width: 130rpx;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 24rpx;
    color: #fff;
    border-radius: 25rpx;
    text-align: center;
    box-shadow: 0px 0px 20rpx 0px #a7e7c2;
}

.window-heartbeat-tip::after {
    content: "";
    width: 0;
    height: 0;
    position: absolute;
    border: solid transparent;
    border-width: 6rpx;
    border-top-color: #36d466;
    left: 25rpx;
    bottom: -12rpx;
}

.window-tip {
    text-align: center;
    font-size: 28rpx;
    font-family: PingFang SC;
    font-weight: 400;
    color: #999;
}

.window-what-main {
    position: fixed;
    left: 50%;
    top: 50%;
    margin-top: -420rpx;
    margin-left: -294rpx;
    width: 588rpx;
    height: 640rpx;
    background-color: #fff;
    border-radius: 40rpx;
}

.window-what-img {
    width: 588rpx;
    height: 214rpx;
}

.window-what-content {
    text-align: center;
    font-family: PingFang SC;
    padding: 50rpx 60rpx;
}

.window-what-content-title {
    font-size: 36rpx;
    font-weight: 500;
    color: #333;
}

.window-what-content-describe {
    font-size: 28rpx;
    font-weight: 400;
    color: #666;
    margin: 40rpx 0;
}

.window-what-btn {
    width: 188rpx;
    height: 68rpx;
    line-height: 68rpx;
    border-radius: 34rpx;
    padding: 0;
    background: rgba(255,211,0,1);
    color: #333;
    font-size: 28rpx;
}

.window-what-close {
    position: absolute;
    top: 50%;
    left: 50%;
    margin-top: 280rpx;
    margin-left: -35rpx;
    width: 70rpx;
    height: 70rpx;
    line-height: 70rpx;
    text-align: center;
    background-color: #999;
    border-radius: 50%;
    padding: 0;
}

.window-what-close .icon-close {
    color: #fff;
    font-size: 28rpx;
}