.page_hd {
    padding: 40rpx;
    text-align: center;
}

.logo {
    width: 114rpx;
    height: 114rpx;
    margin-top: 220rpx;
    margin-bottom: 10rpx;
}

.title {
    color: #000000;
    font-size: 36rpx;
    font-weight: 500;
    text-align: center;
}

.btn-block {
    margin-top: 200rpx;
}

.page_ft {
    position: fixed;
    bottom: 60rpx;
    width: 100%;
    font-size: 20rpx;
    text-align: center;
}

.focus {
    text-decoration: underline;
}

.tip {
    position: fixed;
    bottom: 80rpx;
    margin: 40rpx;
    padding: 20rpx;
    background-color: rgba(0,0,0,.8);
    font-size: 24rpx;
    line-height: 40rpx;
    color: #ffffff;
    border-radius: 10rpx;
}

.page_ft view {
    height: 50rpx;
    line-height: 50rpx;
}

.text-area-note {
    font-size: 24rpx;
}

checkbox .wx-checkbox-input {
    width: 30rpx;
    height: 30rpx;
    margin-bottom: 6rpx;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
    width: 30rpx;
    height: 30rpx;
    line-height: 30rpx;
    text-align: center;
    font-size: 20rpx;
    color: #666;
    background: transparent;
    transform: translate(-50%,-50%) scale(1);
}