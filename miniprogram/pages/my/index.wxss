page {
    background-color: #fafafa;
}


.page_hd {
    display: flex;
    justify-content: space-between;
    margin-top: 2rpx;
    padding: 40rpx;
    background-color: #fff;
}

.no-user-info view {
    margin-top: 6rpx;
    margin-bottom: 20rpx;
    font-size: 40rpx;
    font-weight: 500;
}

.user-info-nickname {
    margin-top: 10rpx;
    font-size: 40rpx;
    font-weight: 500;
}

.user-info-school {
    margin: 10rpx 0 20rpx 0;
    font-size: 28rpx;
    font-weight: 400;
    color: #999;
}

.gender-image {
    width: 30rpx;
    height: 30rpx;
}

.user-image {
    position: relative;
    width: 140rpx;
    height: 140rpx;
}

.user-image image {
    width: 140rpx;
    height: 140rpx;
    border-radius: 50%;
}

.user-image .renzhen {
    position: absolute;
    bottom: 0;
    right: 0;
    width: 30rpx;
    height: 30rpx;
    border-radius: 0;
}

.page_md {
    width: 702rpx;
    height: 240rpx;
    background-image: url("https://www.annybay.com/static/my/bg_rw.png");
    background-repeat: no-repeat;
    background-size: 100% 100%;
    margin: 0 auto;
}

.my_tasks-title {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 30rpx 0 40rpx;
    height: 80rpx;
    line-height: 80rpx;
    border-bottom: 1rpx solid rgba(255,255,255,0.3);
}

.my_tasks-title-lt {
    font-size: 28rpx;
    font-family: PingFang SC;
    font-weight: 500;
    color: rgba(255,255,255,1);
}

.my_tasks-title-rt {
    font-size: 24rpx;
    font-family: PingFang SC;
    font-weight: 400;
    color: rgba(255,255,255,1);
    opacity: 0.2;
}

.icon-arrow-right {
    font-size: 20rpx;
    margin-left: 4rpx;
}

.my_tasks-items {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 160rpx;
}

.my_tasks-item {
    position: relative;
    text-align: center;
    width: 130rpx;
}

.badge {
    position: absolute;
    top: -24rpx;
    right: 24rpx;
    width: 32rpx;
    height: 32rpx;
    color: #fff!important;
    font-size: 24rpx;
    text-align: center;
    line-height: 32rpx;
    border-radius: 50%;
    background-color: #f15867;
}

.my_tasks-item image {
    width: 44rpx;
    height: 44rpx;
}

.my_tasks-item view {
    font-size: 24rpx;
    font-family: PingFang SC;
    font-weight: 400;
    color: rgba(195,195,201,1);
    margin-top: 10rpx;
}

.page_bd {
    background-color: #fff;
}

.cell {
    position: relative;
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 0 40rpx;
    padding: 40rpx 0;
    border-bottom: 2rpx solid #e6e6e6;
}

.cell.logout {
    color: #ff5568;
}

.cell:last-of-type {
    border-bottom: none;
}

.cell image {
    width: 36rpx;
    height: 36rpx;
    margin-right: 20rpx;
}

.cell view {
    flex-grow: 1;
    font-size: 32rpx;
}

view.new {
    position: absolute;
    top: 40rpx;
    left: 190rpx;
    width: 56rpx;
    height: 20rpx;
    background-color: red;
    color: #fff;
    text-align: center;
    font-size: 16rpx;
    line-height: 20rpx;
    border-radius: 10rpx;
}