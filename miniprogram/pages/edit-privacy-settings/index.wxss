.cell {
    position: relative;
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 0 40rpx;
    padding: 40rpx 0;
    border-bottom: 2rpx solid #e6e6e6;
}

.cell>view {
    font-size: 30rpx;
}

switch {
    zoom: .5;
}

.btnOutside {
    display: inline-block;
    width: 60rpx;
    height: 30rpx;
    background-color: #E7E7E7;
    border-radius: 25rpx;
    box-sizing: border-box;
    position: relative;
    animation: leftOut 0.2s linear;
}

.btnOutside checkbox {
    display: none;
}

.btnInside {
    width: 18rpx;
    height: 18rpx;
    background-color: #fff;
    border-radius: 50%;
    box-sizing: border-box;
    position: absolute;
    top: 6rpx;
    left: 6rpx;
    animation: leftIn 0.2s linear;
}

.rightOut .btnInside {
    left: 36rpx;
    animation: rightIn 0.2s linear;
}

.rightOut {
    background-color: #F7D600;
    animation: rightOut 0.2s linear;
}

@-webkit-keyframes rightIn {
    from {
        border: 2rpx solid #D0D0D0;
        left: -2rpx;
    }

    to {
        border: 2rpx solid #F7D600;
        left: 40rpx;
    }
}

@keyframes rightIn {
    from {
        border: 2rpx solid #D0D0D0;
        left: -2rpx;
    }

    to {
        border: 2rpx solid #F7D600;
        left: 40rpx;
    }
}

@-webkit-keyframes leftIn {
    from {
        border: 2rpx solid #F7D600;
        left: 40rpx;
    }

    to {
        border: 2rpx solid #D0D0D0;
        left: -2rpx;
    }
}

@keyframes leftIn {
    from {
        border: 2rpx solid #F7D600;
        left: 40rpx;
    }

    to {
        border: 2rpx solid #D0D0D0;
        left: -2rpx;
    }
}

@-webkit-keyframes rightOut {
    from {
        background-color: #fff;
    }

    to {
        background-color: #F7D600;
    }
}

@keyframes rightOut {
    from {
        background-color: #fff;
    }

    to {
        background-color: #F7D600;
    }
}

@-webkit-keyframes leftOut {
    from {
        background-color: #F7D600;
    }

    to {
        background-color: #fff;
    }
}

@keyframes leftOut {
    from {
        background-color: #F7D600;
    }

    to {
        background-color: #fff;
    }
}

.save-btn {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 96rpx;
    line-height: 96rpx;
    background-color: #ffd034;
    border-radius: 0;
    border: none;
}

.save-btn text {
    color: #333;
    font-size: 32rpx;
}