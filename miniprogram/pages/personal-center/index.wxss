@import "../../templates/public/public.wxss";

page {
    background-color: #f2f2f2;
}

.page_hd {
    position: relative;
    background-color: #ffc400;
    overflow: hidden;
}

.background-circular1 {
    position: absolute;
    top: -300rpx;
    left: 460rpx;
    width: 500rpx;
    height: 500rpx;
    background-color: #fb0;
    border-radius: 50%;
}

.background-circular2 {
    position: absolute;
    top: 180rpx;
    right: 600rpx;
    width: 300rpx;
    height: 300rpx;
    background-color: #ffcd00;
    border-radius: 50%;
}

.user-info {
    position: relative;
    display: flex;
    align-items: center;
    margin: 40rpx;
    z-index: 100;
}

.user-image-block {
    position: relative;
    width: 140rpx;
    height: 140rpx;
}

.user-image {
    width: 140rpx;
    height: 140rpx;
    border-radius: 50%;
    box-shadow: 0px -4px 24px 0px rgba(230,230,230,1);
}

.renzhen-image {
    position: absolute;
    bottom: 0rpx;
    right: 0rpx;
    width: 32rpx;
    height: 32rpx;
}

.info-block {
    padding: 0 40rpx;
}

.name {
    display: inline-block;
    margin-right: 20rpx;
    font-size: 40rpx;
    font-weight: 600;
    color: #333;
}

.gender-image {
    width: 30rpx;
    height: 30rpx;
}

.official {
    position: relative;
    top: -6rpx;
    display: inline-block;
    margin: 10rpx 0;
    padding: 0 10rpx;
    height: 40rpx;
    font-size: 24rpx;
    color: #fff;
    background-color: #fed033;
    line-height: 40rpx;
    border-radius: 4rpx;
    box-shadow: 0px -4px 24px 0px rgba(230,230,230,0);
}

.school {
    margin-top: 10rpx;
    font-size: 28rpx;
    font-weight: 400;
    color: #333;
}

.icon-arrow-right-bold {
    position: absolute;
    right: -10rpx;
    width: 80rpx;
    height: 80rpx;
    font-size: 44rpx;
    color: #d09500;
    line-height: 80rpx;
    text-align: right;
}

.signature {
    position: relative;
    top: -20rpx;
    padding: 0 40rpx;
    margin-left: 180rpx;
    margin-bottom: 78rpx;
    font-size: 28rpx;
    line-height: 40rpx;
    display: -webkit-box;
    white-space: pre-wrap;
    word-wrap: break-word;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.signature-none {
    color: #888;
}

.page_bd {
    position: relative;
    padding: 108rpx 40rpx 40rpx 40rpx;
}

.statistical {
    position: absolute;
    top: -78rpx;
    left: 40rpx;
    display: flex;
    justify-content: space-around;
    align-items: center;
    height: 156rpx;
    width: 670rpx;
    background-color: #fff;
    border-radius: 30rpx;
}

.statistical-item {
    width: 100rpx;
}

.statistical-item-count {
    text-align: center;
    font-size: 44rpx;
    font-weight: bold;
    font-family: DIN Alternate;
}

.statistical-item-name {
    text-align: center;
    font-size: 24rpx;
    font-weight: 400;
    color: #999;
    line-height: 40rpx;
}

.icon-edit {
    margin-right: 10rpx;
}

.impression {
    background-color: #fff;
    border-radius: 30rpx;
}

.impression-hd {
    padding: 20rpx 40rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.impression-title {
    font-size: 36rpx;
    font-weight: bold;
    color: #333;
}

.impression-hd>view {
    display: inline-block;
}

.impression-hd>view>text {
    font-size: 24rpx;
    color: #999;
    margin-left: 10rpx;
}

.icon-setting {
    font-size: 30rpx!important;
}

.add-impression-btn {
    width: 128rpx;
    height: 50rpx;
    margin: 0 0 0 10rpx;
    padding: 0;
    color: #fff;
    line-height: 50rpx;
    font-size: 24rpx;
    font-weight: 500;
    border: 1px solid #ff675e;
    background-color: #ff675e;
    border-radius: 10rpx;
    box-shadow: 0px 0px 20px 0px rgba(255,103,94,0.2);
    box-sizing: border-box;
}

.impression-bd {
    padding: 20rpx 40rpx 30rpx;
    margin-bottom: 40rpx;
}

.impression-item {
    display: inline-block;
    height: 48rpx;
    padding: 0 19rpx;
    margin-right: 16rpx;
    margin-bottom: 20rpx;
    background: #f2f2f2;
    border-radius: 25rpx;
    border: 2rpx solid #f2f2f2;
    color: #666;
    font-size: 24rpx;
    line-height: 24px;
    font-weight: 400;
    text-align: center;
}

.impression-item-more {
    background-color: #fff;
    border: 2rpx solid #ccc;
}

.tab-items {
    height: 68rpx;
    background-color: #e6e6e6;
    border-radius: 34rpx;
}

.tab-item {
    display: inline-block;
    width: 50%;
    color: #999;
    font-size: 28rpx;
    font-weight: 600;
    text-align: center;
    line-height: 68rpx;
    border-radius: 34rpx;
}

.tab-item.active {
    background-color: #f8d300;
    color: #333;
}

.go-top {
    position: fixed;
    bottom: 130rpx;
    right: 30rpx;
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    background-color: rgba(204,204,204,0.8);
    text-align: center;
    line-height: 60rpx;
    color: #fff;
    font-size: 28rpx;
}

.no-list {
    margin-bottom: 40rpx;
    font-size: 24rpx;
    color: #999;
    text-align: center;
}